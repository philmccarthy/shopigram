<% if current_user %>
  <%= render partial: 'users/upload_form' %>
  <section class="section">
    <h2 class="title has-text-centered"><%= current_user.username %>'s Images</h2>
  </section>
  <% current_user.images.each_slice(3) do |images| %>
  <div class="columns">
    <% images.each do |image| %>
      <div class="column">
        <figure class="image is-256x256">
          <%= image_tag(image.variant(resize: '325x325'), id: "image-#{image.id}") %>
        </figure>
      </div>
    <% end %>
    </div>
  <% end %>
<% else %>
  <section class="hero is-primary is-small">
    <div class="hero-body">
      <div class="container has-text-centered">
        <%= link_to 'Create Account', login_path, class: 'button is-large is-primary is-light' %>
      </div>
    </div>
  </section>
<% end %>
